{% extends 'base.html.twig' %}

{% block title %}
Créer Haie

{% endblock %}
{% block body %}
</br>
<style>
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px/1.5 sans-serif;
	}

	.example-wrapper code {
		background: #F5F5F5;
		padding: 2px 6px;
	}
</style>
{% block content %}

<body style="background-image: url(https://pbs.twimg.com/media/FMDVyYDWYAcpFSF?format=jpg&name=large); background-size: 100%;"></br>

	<p style="font-family: 'Letters for Learners';color: #fffff;text-align: center;font-size: 30px">
		<B>
			-------- AJOUTER UN DEVIS --------


		</B>
	</p>
	<div class="form-group">
		{{ form_start(form) }}
		<table class="table" style="width: 50%;position:relative;top:-80px; left:400px">
        <thead>
            {% for message in app.flashes('success') %}
            <div class="flash-notice alert alert-secondary" style="width: 55%;text-align:center; position:relative;left:350px">
                <i class="fa fa-check"></i>
                {{ message|raw }}
            </div>
        {% endfor %}
    </br>
</br>
			<tr>
				<td>
					{{ form_label(form.haie, 'Choisissez votre type de haie : ' ) }}
					{{ form_widget(form.haie, {'attr':{'class':'form-control' }}
					) }}
				</td>
			</tr>
			</br>
			<tr>
				<td>
					{{ form_label(form.longueur, 'Longueur (en mètre) :' ) }}
					{{ form_errors(form.longueur) }}
					{{ form_widget(form.longueur, {'attr':{'class':'form-control', 'placeholder' : 'Entrez la longueur (en mètre)' }}
					) }}
				</td>
				<td>
					{{ form_label(form.hauteur, 'Hauteur (en mètre) :' ) }}
					{{ form_errors(form.hauteur) }}
					{{ form_widget(form.hauteur, {'attr':{'class':'form-control', 'placeholder' : 'Entrez la hauteur (en mètre)' }}
					) }}
				</td>
			</tr>
			</br>
		</thead></table>
		<div style="position:absolute; left:1000px">
			<button class="btn btn-success">{{ button_label|default('Ajouter le devis !') }}</button>
		</div>
	</div>{{ form_end(form) }}
</body>{% endblock %}{% endblock %}