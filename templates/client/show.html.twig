	<h1>Client</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ client.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ client.nom }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
