{% extends 'base.html.twig' %}

{% block title %}
Mesure
{% endblock %}

{% block body %}
<style>
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px/1.5 sans-serif;
	}

	.example-wrapper code {
		background: #F5F5F5;
		padding: 2px 6px;
	}
</style>
{% block content %}

<body style="background-image: url(https://pbs.twimg.com/media/FMDVyYDWYAcpFSF?format=jpg&name=large); background-size: 100%;">
	<form action="{{ path('resultDevis') }}" method="post"></br>
		<p style="font-family: 'Letters for Learners';color: #fffff;text-align: center;font-size: 30px">
			<B>
				------------ MESURE ------------
			</B>
		</p>
		<div class="col-10 offset-1 col-lg-8 offset-lg-2 div-wrapper d-flex justify-content-center align-items-center">
			<div class="div-to-align">
				<div class="example-wrapper form-check"></br>
					<table class="table" style="">
						<thead>
							<tr>
								<td>
									<label for="exampleFormControlSelect1" style="font-size:20px">
										Choisir votre type de haie :
									</label>
									<select class="form-control" name="mesure" id="mesure" style="font-size:20px">
										{% for item in haies %}
										<option>
											{{ item.getNom() }}
										</option>
										{% endfor %}
									</select>
								</td>
							</tr>
							</br>
							<tr>
								<td>
									<label for="exampleInputEmail1" style="font-size:20px">
										Choisir votre longueur : (en mètre)
									</label>
									<input type="number" class="form-control" placeholder="Entrez une longueur (en mètre)" name="longueur" style="font-size:20px" required></br>
								</td>
								<td>
									<label for="exampleInputEmail1" style="font-size:20px">
										Choisir votre hauteur : (en mètre)
									</label>
									<input type="number" class="form-control" placeholder="Entrez une hauteur (en mètre)" name="hauteur" style="font-size:20px" required></br>
								</td>
						</thead>
					</table>
					</br>

					<div style="position:absolute; left:480px">
						<button class="btn btn-success">
							Suivant ->
						</button>
						<a type="button" class="btn btn-danger" href="/choix">
							Retour
						</a>
					</div>
				</div>
			</div>
</body>
<script>
	$(document).ready(function() {
    $("#check").click(function() {
        if ($.isNumeric($('#input').val())) {
            $('#output').html('La valeur est un nombre.');
        } else {
            $('#output').html('La valeur n\'est pas un nombre.');
        }
    });
});</script>
</form>{% endblock %}{% endblock %}